#16GB System (Shared)#

[mysql]
port                    = 3306
socket                  = /var/lib/mysql/mysqld.sock
default-character-set   = utf8mb4

[mysqld]
#  Basic Settings  #
user                    = sduser
pid-file                = /var/lib/mysql/mysqld.pid
socket                  = /var/lib/mysql/mysqld.sock
port                    = 3306
basedir                 = /usr
datadir                 = /data/db_data
tmpdir                  = /tmp
skip-name-resolve
interactive_timeout     = 360
wait_timeout            = 360
character-set-server    = utf8mb4
collation-server 	= utf8mb4_general_ci

#  Fine Tuning  #
key_buffer              = 64M  
max_allowed_packet      = 32M
thread_stack            = 256KB 
thread_cache_size       = 11 
myisam-recover          = BACKUP
max_connections         = 250
table_open_cache        = 2048
group_concat_max_len    = 5120
transaction-isolation   = READ-COMMITTED
innodb_doublewrite      = 0

# Query Cache Configuration #
query_cache_type        = 1 
query_cache_limit       = 1M 
query_cache_size        = 2M 
join_buffer_size        = 500M 

# InnoDB #
innodb_buffer_pool_size         = 5120MB
innodb_log_buffer_size          = 16MB 
innodb_log_file_size            = 256MB
innodb_log_files_in_group       = 2 
default-storage-engine  	= InnoDB
innodb_flush_log_at_trx_commit  = 0 
sort_buffer_size                = 5MB
read_buffer_size                = 2MB
read_rnd_buffer_size            = 2MB
innodb_file_per_table           = 1
innodb_write_io_threads         = 64
innodb_read_io_threads          = 64
innodb_thread_concurrency       = 0
innodb_buffer_pool_instances    = 8

#  Logging  #
log-error                       = /data/db_data/mysql-error.log

[client]
socket = /var/lib/mysql/mysqld.sock
port = 3306
default-character-set   = utf8mb4

[mysqldump]
quick
quote-names
max_allowed_packet 	= 64M
socket          	= /var/lib/mysql/mysqld.sock

[isamchk]
key_buffer              = 16M

[mysqlhotcopy]
interactive-timeout

